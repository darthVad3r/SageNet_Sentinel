{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MLNet": {
    "ModelPath": "fraud_model.zip"
  },
  "SageMaker": {
    "Enabled": false,
    "EndpointName": "fraud-detection-endpoint",
    "RoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/SageMakerRole",
    "S3BucketName": "your-sagemaker-bucket",
    "AwsRegion": "us-west-2"
  },
  "FalsePositiveReduction": {
    "MLNetWeight": 0.5,
    "SageMakerWeight": 0.5,
    "FraudThreshold": 0.5,
    "DisagreementThreshold": 0.7,
    "SmallTransactionThreshold": 50.0,
    "HighValueTransactionThreshold": 5000.0,
    "LowConfidenceThreshold": 0.3,
    "MinimumConfidenceForAutoDecision": 0.4
  }
}
